<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/activity_detalle_cerdo"
            tools:context=".DetalleCerdoActivity">

        <TextView
                android:text="@string/id_88888"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/lbldcID"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline7"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
                android:textAlignment="textEnd"/>
        <TextView
                android:text="@string/no_88888"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/lbldcNumero"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="24sp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline7" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/lbldcID"/>
        <TextView
                android:text="@string/informaci_n_detallada_de_cada_cerdo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="56dp" app:layout_constraintTop_toTopOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        <TextView
                android:text="@string/nombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/lbldcNombre" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline7" android:layout_marginEnd="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5"/>
        <TextView
                android:text="@string/peso_76_kg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/lbldcPeso" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/lbldcNumero"
                app:layout_constraintStart_toStartOf="@+id/guideline7" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        <TextView
                android:text="@string/_2018_05_23"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/lbldcFecha"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/lbldcTipo"
                android:layout_marginTop="16dp" app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:layout_marginEnd="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        <TextView
                android:text="@string/semental"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/lbldcTipo"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/lbldcNombre" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline7"
                android:layout_marginEnd="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/lbldcFecha"
                android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="@string/peso_historico_del_cerdo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/divider" android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline10"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="98dp"
                android:id="@+id/lbldcPesoH" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textAlignment="textStart"
                app:layout_constraintEnd_toStartOf="@+id/guideline6"/>
        <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chartPesos"
                android:layout_width="0dp"
                android:layout_height="98dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginStart="8dp"/>
        <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/chartPesos" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"/>
        <TextView
                android:text="@string/ulimas_vacunas"
                android:layout_width="0dp"
                android:layout_height="53dp" android:id="@+id/textView3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/divider2"/>

        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline"
                                              android:orientation="vertical"
                                              app:layout_constraintGuide_percent="0.5"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline6"
                                              android:orientation="vertical"
                                              app:layout_constraintGuide_percent="0.25"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="98dp"
                android:id="@+id/lbldcPesoH2" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
                app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" android:textAlignment="textEnd"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline7"
                                              android:orientation="vertical"
                                              app:layout_constraintGuide_percent="0.55"/>
        <Button
                android:text="@string/ver_pesos"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:id="@+id/btndcVerPesos"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:onClick="verListaPesos_onClick"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView2" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline10"
                android:textAppearance="@style/TextAppearance.AppCompat"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline10"
                                              android:orientation="vertical"
                                              app:layout_constraintGuide_percent="0.7"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>